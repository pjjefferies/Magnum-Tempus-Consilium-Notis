#:kivy 1.0.9

<SelectableLabel>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<TWoThings>:
    Label:
        text: root.left_text
    Label:
        text: root.right_text

<NotisWidget>:
    BoxLayout:
        orientation: "vertical"
        size : root.width, root.height
        BoxLayout:  # Title Bar
            orientation: "horizontal"
            size_hint: 1, None
            height: "12dp"
            Button:
                text: "File"
                font_size: 20
                width: "5dp"
                size_hint: (0.03, 1)
            Button:
                text: "Edit"
                font_size: 20
                width: "5dp"
                size_hint: (0.03, 1)
            Button:
                text: "Note"
                font_size: 20
                width: "5dp"
                size_hint: (0.03, 1)
            Button:
                text: "Something"
                font_size: 20
                width: "5dp"
                size_hint: (0.08, 1)
            Button:
                text: "Help"
                font_size: 20
                width: "5dp"
                size_hint: (0.03, 1)
            Label:
                text: ""  # Take-up space to right
                width: "5dp"
                size_hint: (0.8, 1)
        Label:  # Space Below Title Bar
            text: ""  # Space below Title Bar
            size_hint: 1, None
            height: "6dp"
        BoxLayout:  # Main Window
            orientation: "horizontal"
            BoxLayout:  # Left Panal with Buttons and List of Items
                orientation: "vertical"
                size_hint: 0.4, 1
                BoxLayout:  # Button Bar
                    orientation: "horizontal"
                    size_hint: 1, None  # important
                    height: "24dp"
                    Button:
                        text: "Tasks"
                        font_size: 24
                        width: "10dp"
                        size_hint:(0.2, 1)
                        on_release: rv.add()  # tasks_button
                    Button:
                        text: "Projects"
                        font_size: 24
                        width: "50dp"
                        size_hint:(0.2, 1)
                        # on_press: projects_button
                    Button:
                        text: "Reference"
                        font_size: 24
                        width: "50dp"
                        size_hint:(0.2, 1)
                        # on_press: reference_button
                    Button:
                        text: "Reminders"
                        font_size: 24
                        width: "50dp"
                        size_hint:(0.2, 1)
                        # on_press: reminders_button
                    Button:
                        text: "Bookmarks"
                        font_size: 24
                        width: "50dp"
                        size_hint:(0.2, 1)
                        # on_press: reminders_button
                RV:
                    id: rv
                    viewclass: "SelectableLabel"
                    viewclass: "TwoThings"
                    data: self.data
                    # scroll_type: ["bars", "content"]
                    bar_width: 10
                    SelectableRecycleBoxLayout:
                        # default_size: None, dp(28)
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'
                        # multiselect: True
                        # touch_multiselect: True
                # Label:  # List of Items
                #     size_hint: 1, None
                #     viewclass: 'SelectableLabel'
                #     text: "This is a box"
            BoxLayout:  # Right Panel
                orientation: "vertical"
                size_hint: 0.6, 1
                Label:  # Right Panel Title
                    text: "This is a title"
                    height: "24dp"
                    size_hint: (1, 0.05)
                    border_width: 2
                    border_color: [1, 1, 1, 1]
                Label:  # Right Panel Main Window
                    text: "This is a body"
                    size_hint: (1, 0.95)
                    border_width: 5